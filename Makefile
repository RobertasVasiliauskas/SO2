CXX = g++

CXXFLAGS = -std=c++23 -pthread

TARGET = dining_philosophers

SRCS = main.cpp classes/philosopher/philosopher.cpp

OBJS = $(SRCS:.cpp=.o)

all: $(TARGET)

$(TARGET): $(OBJS)
	$(CXX) $(CXXFLAGS) -o $@ $^

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS) $(TARGET)

.PHONY: all clean